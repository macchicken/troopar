<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="10dp"
    android:layout_marginBottom="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/appMainColor"
        android:orientation="vertical">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tvImageView"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />
                <ImageView
                    android:id="@+id/tvImageCover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#40000000"
                    android:onClick="eventDetailAction"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_alignStart="@+id/listOfJoinersContainer"
                    android:id="@+id/linearLayout2">
                    <com.meg7.widget.CircleImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:id="@+id/userImage"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:onClick="userImageAction"/>
                    <LinearLayout
                        android:layout_marginStart="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/eventPosterName"
                            android:textColor="@color/whiteColor"
                            android:textSize="15sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/eventPostedTime"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/whiteColor"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/eventDistanceContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp">
                    <TextView
                        android:id="@+id/eventDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_distance"
                        android:textSize="14sp"
                        android:textColor="@color/whiteColor" />
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/listOfJoinersContainer"
                    android:layout_alignEnd="@+id/eventDistanceContainer"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="15dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/listOfJoiners"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent" />
                </LinearLayout>
            </RelativeLayout>
        <LinearLayout
            android:id="@+id/eventMainInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvEventName"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp"
                android:singleLine="true"
                android:text="New Year's Eve Fireworks"
                android:textColor="@color/whiteColor"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textStyle="bold" />
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/tvEventTimeContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:tint="@color/whiteColor"
                    android:src="@drawable/logo_128px_date"/>
                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginStart="3dp"
                    android:singleLine="true"
                    android:text=" Thu 31 Dec 2015, 9pm midnight"
                    android:textColor="@color/whiteColor"
                    android:textSize="14sp" />
            </LinearLayout>
            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="3dp"
                android:id="@+id/tvEventCategoryContainer"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/event_category_icon"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentStart="true"
                    android:tint="@color/appMainColor"
                    android:src="@drawable/logo_128px_category"/>
                <TextView
                    android:id="@+id/tvCategory"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginStart="3dp"
                    android:singleLine="true"
                    android:text=" Festival, Show"
                    android:textColor="@color/whiteColor"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/event_category_icon" />
            </RelativeLayout>
            <ProgressBar
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:id="@+id/eventPeopleJoinedProgress"
                android:indeterminate="false"
                style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/progress_drawable_for_event"/>
            <RelativeLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/eventJoinedPeople"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:singleLine="true"
                        android:text="Content"
                        android:textColor="@color/whiteColor"
                        android:textStyle="bold"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:singleLine="true"
                        android:text="Joined"
                        android:textColor="@color/whiteColor"
                        android:textSize="13sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/eventDaysToGo"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:singleLine="true"
                        android:text="Content"
                        android:textStyle="bold"
                        android:textColor="@color/whiteColor"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:singleLine="true"
                        android:text="Day(s) to go"
                        android:textColor="@color/whiteColor"
                        android:textSize="13sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/eventCost"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:singleLine="true"
                        android:text="Content"
                        android:textStyle="bold"
                        android:textColor="@color/whiteColor"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/requireType"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:singleLine="true"
                        android:text="Entry fee"
                        android:textColor="@color/whiteColor"
                        android:textSize="13sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dip"
            android:weightSum="1">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.03"/>
            <RelativeLayout
                android:id="@+id/eventShareBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.02"
                android:onClick="eventShareAction"
                android:background="@drawable/bg_ring_with_gradient">
                <ImageView
                    android:layout_width="15dip"
                    android:layout_height="20dip"
                    android:layout_margin="5dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/messageforward_icon"
                    android:tint="@color/whiteColor" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"/>
            <RelativeLayout
                android:id="@+id/joinBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.02"
                android:onClick="joinEventAction">
                <ImageView
                    android:layout_width="15dip"
                    android:layout_height="20dip"
                    android:layout_margin="5dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/logo_128px_joined" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

